<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txt_list_rss_channel_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dim_txt_rss_channels_name"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/txt_list_rss_channel_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_links"
        android:textSize="@dimen/dim_txt_base"
        android:textStyle="bold|italic" >
    </TextView>

    <TextView
        android:id="@+id/txt_list_rss_channel_lastupdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dim_txt_base"
        android:textStyle="bold" >
    </TextView>

</LinearLayout>
