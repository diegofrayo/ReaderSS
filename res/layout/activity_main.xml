<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Title Bar -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dark"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/icontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_title_app" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icontitle"
            android:text="@string/app_name"
            android:textColor="@color/secundary_text"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Body -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_light"
        android:orientation="vertical" >

        <!-- Welcome Text -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_welcome"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dim_txt_base"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_welcome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dim_txt_base"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <!-- Icons bar -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_add_rss_channel"
                style="@style/TextsIconsMainActivity"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableTop="@drawable/ic_add"
                android:text="@string/txt_rss_channel" />

            <Button
                android:id="@+id/btn_favorite_links"
                style="@style/TextsIconsMainActivity"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableTop="@drawable/ic_favorite_links"
                android:text="@string/txt_rss_links_favorites" />

            <Button
                android:id="@+id/btn_add_category"
                style="@style/TextsIconsMainActivity"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/ic_add"
                android:text="@string/txt_category" />
        </LinearLayout>

        <!-- Content (categories) -->

        <com.diegorayo.readerss.adapters.VerticalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/layoutParentCategories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </com.diegorayo.readerss.adapters.VerticalScrollView>
    </LinearLayout>

</LinearLayout>