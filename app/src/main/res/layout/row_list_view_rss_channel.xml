<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="1dp"
    android:background="@color/color_row_item_bg"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/icon_rss_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_rss_channel" />

    <TextView
        android:id="@+id/txt_list_rss_channel_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon_rss_channel"
        android:textColor="@color/color_light_green"
        android:textSize="@dimen/size_font_large"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/txt_list_rss_channel_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_rss_channel_name"
        android:layout_toRightOf="@+id/icon_rss_channel"
        android:textColor="@color/color_light_blue"
        android:textSize="@dimen/size_font_extra_small"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/txt_list_rss_channel_lastupdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_rss_channel_url"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/icon_rss_channel"
        android:gravity="right"
        android:textSize="12sp"
        android:textStyle="bold|italic"
       android:textColor="#555555" >
    </TextView>

</RelativeLayout>