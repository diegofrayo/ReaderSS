<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/color_row_item_bg"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_weight="0.8"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_categories" />

    <TextView
        android:id="@+id/txt_list_categories_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="2.45"
        android:gravity="left"
        android:textColor="@color/color_light_green"
        android:textSize="@dimen/size_font_large"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/txt_list_categories_number_rss_channels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.75"
        android:gravity="center"
        android:textColor="@color/color_light_gray"
        android:textSize="@dimen/size_font_extra_large"
        android:textStyle="bold" >
    </TextView>

</LinearLayout>